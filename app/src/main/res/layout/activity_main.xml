<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_main"
        android:layout_width="match_parent"
        android:layout_height="120dp">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_dalu"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="130dp">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_dayanzai"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="260dp">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_xiaolu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="330dp">
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_xiaoqianglu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="400dp">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="470dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_ask1"
            android:layout_width="@dimen/common_small"
            android:layout_height="@dimen/common_small"
            android:padding="1px"/>
        <ImageView
            android:id="@+id/iv_ask2"
            android:layout_width="@dimen/common_small"
            android:layout_height="@dimen/common_small"
            android:padding="1px"/>
        <ImageView
            android:id="@+id/iv_ask3"
            android:layout_width="@dimen/common_small"
            android:layout_height="@dimen/common_small"
            android:padding="1px"/>
        <ImageView
            android:id="@+id/iv_ask4"
            android:layout_width="@dimen/common_small"
            android:layout_height="@dimen/common_small"
            android:layout_marginLeft="40dp"
            android:padding="1px"/>
        <ImageView
            android:id="@+id/iv_ask5"
            android:layout_width="@dimen/common_small"
            android:layout_height="@dimen/common_small"
            android:padding="1px"/>
        <ImageView
            android:id="@+id/iv_ask6"
            android:layout_width="@dimen/common_small"
            android:layout_height="@dimen/common_small"
            android:padding="1px"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="clear"
            android:text="清除"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="zhuang"
            android:text="庄"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="xian"
            android:text="闲"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:onClick="he"
            android:text="和"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="zhuangdui"
            android:text="庄对"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="xiandui"
            android:text="闲对"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:onClick="queding"
            android:text="确定"/>
    </LinearLayout>
</RelativeLayout>